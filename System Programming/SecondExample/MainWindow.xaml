<Window
    x:Class="SecondExample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SecondExample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SecondExample.Vm"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowVm}"
    mc:Ignorable="d">
    <Grid>
        <Grid>
            <StackPanel
                Width="350"
                Height="120"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">

                <TextBlock
                    Width="350"
                    Height="30"
                    Text="{Binding Result}" />

                <TextBox
                    Width="350"
                    Height="30"
                    Text="{Binding Argument}" />

                <Button
                    Width="350"
                    Height="30"
                    Command="{Binding CalculateCommand}"
                    Content="Посчитать" />

                <Button
                    Width="350"
                    Height="30"
                    Command="{Binding CancelCalculateCommand}"
                    Content="Отмена" />
            </StackPanel>
            
            <StackPanel
                Width="350"
                Height="120"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">

                <TextBlock
                    Width="350"
                    Height="30"
                    Text="{Binding Result}" />

                <TextBox
                    Width="350"
                    Height="30"
                    Text="{Binding Argument}" />

                <Button
                    Width="350"
                    Height="30"
                    Command="{Binding CalculateCommand}"
                    Content="Посчитать" />

                <Button
                    Width="350"
                    Height="30"
                    Command="{Binding CancelCalculateCommand}"
                    Content="Отмена" />
            </StackPanel>
        </Grid>

    </Grid>
</Window>
